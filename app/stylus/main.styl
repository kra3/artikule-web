*
  font-family: 'Raleway', sans-serif;
  // font-family: 'Source Sans Pro', sans-serif;

#featured
#post
  padding: 0 15px

  header
    div
      padding-bottom: 15px;

  img
    width: 100%
    height: auto;

  section
    img
      width: 50%;
      float: right;

#suggestion
  header
    div
      display: flex
      justify-content: space-between

      h4
        margin: 8px 0
        padding-left: 15px

      div
        padding-right: 15px

  .nav-title
    line-height: 3em

  .nav-img
    width: 250px;
    height: 250px;

#latest
  padding-left: 15px

  article
    position: relative
    padding-left: 50px

    span
      position: absolute
      left: 0
      top: 10px
      font-size: 36px
      font-weight: 600
